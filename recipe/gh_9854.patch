@@ -211,6 +211,34 @@ if sys.platform == 'win32':
     default_src_dirs = ['.']
     default_x11_lib_dirs = []
     default_x11_include_dirs = []
+    vcpkg_include_dirs = [
+        'include',
+        'include/suitesparse',
+    ]
+    vcpkg_lib_dirs = [
+        'lib',
+    ]
