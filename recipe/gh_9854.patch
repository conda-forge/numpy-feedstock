+                vcpkg_dir, 'installed', specifier + '-windows')
+
+            default_lib_dirs.extend(
+                os.path.join(
+                    vcpkg_root, d.replace('/', os.sep)) for d in vcpkg_lib_dirs)
+            default_include_dirs.extend(
+                os.path.join(
+                    vcpkg_root, d.replace('/', os.sep)) for d in vcpkg_include_dirs)
 else:
